/* common/components/count/count.wxss */
.count-box{
  white-space: nowrap;
}
.count-box image{
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle
}
.count-box text{
  display: inline-block;
  vertical-align: middle;
  padding: 0;
  width: 50rpx;
  text-align: center;
}
.count-icon{
  display: inline-block;
  line-height: 44rpx;
  padding: 0;
  text-align: center;
  vertical-align: middle;
  height: 50rpx;
  width: 50rpx;
  font-size: 40rpx;
  background-color: #F48831;
  color: white;
  border: none;
  border-radius: 8rpx;
}
.icon-disabled{
  background-color: #BEBEBE;
}