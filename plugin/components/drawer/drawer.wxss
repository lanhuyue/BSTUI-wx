/* common/components/drawer/drawer.wxss */
 @import "../components.wxss";  
.drawer-box,
.drawer-title,
.drawer-content,
{
  width: 100%;
  box-sizing: border-box;
  line-height: 28rpx;
}
.drawer-box{
  background-color: white;
}
.drawer-title{
  white-space: nowrap;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f1f1f1;
}
.drawer-title:active{
  background-color: #f1f1f1;
}
.drawer-title .view{
  display: inline-block;
  vertical-align: middle;
}
.drawer-title-content{
    width: 100%;
    padding:0 80rpx 0 30rpx;
    margin-right: -80rpx;
}
.drawer-title-icon{
  width: 80rpx;
  text-align: right;
  box-sizing: border-box;
  padding-right: 34rpx;
}
